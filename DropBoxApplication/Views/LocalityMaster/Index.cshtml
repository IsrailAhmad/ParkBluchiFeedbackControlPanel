@model DropBoxApplication.Models.LocalityMasterModel
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_MainLayout.cshtml";
    }

    <h2>Locality Master</h2>
    @using (Html.BeginForm("AddNewLocalityName", "LocalityMaster", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        if (ViewBag.Message != null)
        {
            <div class="alert alert-success" id="success-alert">
                <button type="button" class="close" data-dismiss="alert">x</button>
                <strong>Success! </strong>
                <span>@ViewBag.Message</span>
            </div>
        }

        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.LocalityName)
                    @Html.ValidationMessageFor(model => model.LocalityName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ImagePath, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="imagefile" required />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="submit" class="btn btn-default" />
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="reset" value="submit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Back to LocalityMaster", "index")
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
<script>
        $("#success-alert").fadeTo(2000, 500).slideUp(500, function () {
            $("#success-alert").slideUp(500);
        });
</script>
    }








